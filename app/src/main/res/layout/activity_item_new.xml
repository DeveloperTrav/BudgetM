<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".ItemNewActivity">

    <LinearLayout
        android:layout_width="282dp"
        android:layout_height="371dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextItemName" android:hint="@string/item_name_prompt"
            android:textColorHint="@color/primaryText" android:textColor="@color/primaryText"
            android:paddingBottom="40px" android:background="@color/colorAccent"/>
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextItemCost" android:hint="@string/item_cost_prompt"
            android:textColorHint="@color/primaryText" android:textColor="@color/primaryText"
            android:paddingBottom="40px" android:background="@color/colorAccent"/>
        <EditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editTextItemDescription" android:hint="@string/item_description_prompt"
            android:textColor="@color/primaryText" android:textColorHint="@color/primaryText"
            android:paddingBottom="40px" android:background="@color/colorAccent"/>
        <Button
            android:text="@string/save"
            android:layout_width="218dp"
            android:layout_height="wrap_content" android:id="@+id/buttonSaveItem"
            android:background="@color/colorAccent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>